<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/checkout.js"></script>
</head>
<body>
    <h1>Checkout</h1>
    <% if (cart.length > 0) { %>
        <ul>
            <% cart.forEach(item => { %>
                <li>
                    <img src="images/<%= item.image %>" alt="<%= item.name %>">
                    <h3><%= item.name %></h3>
                    <p>Price: R <%= item.price %></p>
                    <p>Quantity: <%= item.quantity %></p>
                </li>
            <% }); %>
        </ul>
        <form id="payment-form">
            <h3>Select Payment Method</h3>
            <input type="radio" id="eft" name="paymentMethod" value="EFT" required>
            <label for="eft">EFT</label><br>
            <input type="radio" id="paypal" name="paymentMethod" value="PayPal" required>
            <label for="paypal">PayPal</label><br>
            <!-- Add more payment options as needed -->
            <button type="button" id="checkout-button">Proceed to Payment</button>
        </form>
    <% } else { %>
        <p>Your cart is empty</p>
    <% } %>
</body>
</html>
